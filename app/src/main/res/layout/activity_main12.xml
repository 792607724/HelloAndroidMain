<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity12">

    <TextView
        android:id="@+id/textViewFormatSystem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="正在……"
        android:textColor="#ff00ff"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textViewScale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFormatSystem"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="格式化……"
        android:textColor="#ff00ff"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textViewTranslate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tween_anim_circleImageView"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="手机……"
        android:textColor="#ff00ff"
        android:textSize="50sp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tween_anim_circleImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/tween_animation_robotoperate"
        app:civ_border_color="#ffff00"
        app:civ_border_width="10dp" />


</RelativeLayout>